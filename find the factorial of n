//Write a factorial function that returns the factorial of a given number, n. Make sure you return the calculated value and not just print it. [function factorial(n){...}]

function factorial(n){
    var result = 1;
    if (n === 0 || n === 1)
    {return 1;
    }else {for (i=n;i>=1;i--)
        {result*=i;}}
                return result;
               }
